<%- include(nav) -%>

<body class="game">
    <div class="column">
      <div class="stats">
        <h2>Game Statistics</h2>
        <div class="wrapper">
        <div id="player1">
          <h3 class="py-3">Player 1 (Top)</h3>
        </div>
        <div id="player2">
          <h3 class="py-3">Player 2 (Bottom)</h3>
        </div>
        </div>
        <div class="clearfix"></div>
        <div class="turn"></div>
        <span id="winner"></span>
        <hr>
        <div class="m-2 text-center">
          <h3 class="p-2">Start A New Game</h3>

          <button id="newgame" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">New Game</button>
        </div>
        
        <hr>
        <h3 class="text-center  py-2">Load A Game</h3>
        <table class="table-auto">
          <thead>
            <th>GameId</th>
            <th>Last Played</th>
            <th>Score</th>
            <th colspan="2">Action</th>
          </thead>
          <tbody class="game-tables-body">

          </tbody>
        </table>
      </div>
    </div>
    <div class="column">
      <div id="board">
        <div class="tiles"></div>
        <div class="pieces">
          <div class="player1pieces">
          </div>
          <div class="player2pieces">
          </div>
        </div>
    </div>
</body>
</html>